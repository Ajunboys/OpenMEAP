<project xmlns:ivy="antlib:org.apache.ivy.ant" default="help">

	<import file="./shared.xml"/>
	
	<property environment="env"/>

	<!-- BEGIN setup the blackberry.sdk.home property -->
	<condition property="blackberry.sdk.home.avail">
		<or>
			<isset property="blackberry.sdk.home"/>
			<isset property="env.BLACKBERRY_SDK_HOME"/>
		</or>
	</condition>
	<fail unless="blackberry.sdk.home.avail">
		Either &quot;blackberry.sdk.home&quot; property is not set 
		or there is no BLACKBERRY_SDK_HOME environment variable to fall-back on.  
		One of these should be a directory path pointing to the root of the 
		directory where rapc exists.
	</fail>
	<condition property="blackberry.sdk.home" value="${env.BLACKBERRY_SDK_HOME}">
		<not><isset property="blackberry.sdk.home"/></not>
	</condition>
	<!-- END setup the blackberry.sdk.home property -->
	
	<!-- START make sure rapc.exe is available -->
	<condition property="blackberry.rapc.avail">
	    <available file="${blackberry.sdk.home}/components/bin/rapc.exe"/>
	</condition>
	<fail unless="blackberry.rapc.avail">
	    rapc.exe is not available where expected, at ${blackberry.sdk.home}/rapc.exe.
	</fail>
	<property name="blackberry.rapc" value="${blackberry.sdk.home}/components/bin/rapc.exe"/>
	<!-- END make sure rapc.exe is available -->
	
	<target name="-setup-client-properties" depends="-pre-create-project,setup-client-properties">
		<!-- some device specific properties -->
		<property name="openmeap.slic.providerAuthority" value="${openmeap.slic.package}.fileprovider"/>
		<property name="openmeap.slic.blackberry.activity" value="MainActivity"/>
		<property name="openmeap.slic.blackberry.projectName" value="${openmeap.slic.projectName}"/>
		<property name="openmeap.slic.blackberry.target" value="Google Inc.:Google APIs:8"/>
		
		<!-- generic slic properties -->
		<property name="openmeap.slic.blackberry.path" location="${user.dir}"/>
		<property name="openmeap.slic.absPath" location="${openmeap.slic.blackberry.path}"/>		
		<property name="openmeap.slic.assets.dest.absPath" location="${openmeap.slic.absPath}/assets/${openmeap.slic.packagedAppRoot}"/>
		
		<property name="openmeap.slic.blackberry.artifact.release.unsigned.unaligned"
				value="${openmeap.slic.blackberry.path}/bin/${openmeap.slic.projectName}-release-unsigned.apk"/>
		<property name="openmeap.slic.blackberry.artifact.release.signed.unaligned"
				value="${openmeap.slic.blackberry.path}/bin/${openmeap.slic.projectName}-release-signed-unaligned.apk"/>
		<property name="openmeap.slic.blackberry.artifact.release.signed.aligned"
				value="${openmeap.slic.blackberry.path}/bin/${openmeap.slic.projectName}-release-signed-aligned.apk"/>
	</target>
	
	<target name="-pre-create-project">			
		<property name="openmeap.slic.deviceType" value="blackberry"/>
		<property name="openmeap.home.relative" 
				value="${openmeap.home}" 
				basedir="${openmeap.slic.absPath}" 
				relative="yes" />
	</target>
	
	<target name="build-debug" depends="-setup-client-properties" description="Build an OpenMEAP blackberry SLIC project for debug.">
		<ant dir="${openmeap.slic.absPath}" antfile="${openmeap.project.build}/ant_scripts/client_blackberry.xml" target="copy-slic-assets"/>
		<exec dir="${openmeap.slic.absPath}" executable="${blackberry.rapc}">
			<arg value="-convertpng"/> 
			<arg value="-nomain"/>
			<arg value="-quiet"/>
			<arg value="library=deliverables\Standard\5.0.0\OpenMEAPSLICBlackberryOutputFileName"/> 
			<arg value="-sourceroot=${openmeap.home}\clients\java\openmeap-slic-blackberry\src;${openmeap.home}\clients\java\openmeap-slic-core\src;${openmeap.home}\java-shared\openmeap-shared\src;${openmeap.home}\clients\java\openmeap-slic-blackberry\res"/>
			<arg value="-import=${blackberry.sdk.home}\components\lib\net_rim_api.jar"/>
			<arg value="deliverables\Standard\5.0.0\OpenMEAPSLICBlackberryOutputFileName.rapc"/>
			<arg value="${openmeap.home}\clients\java\openmeap-slic-blackberry\bin"/>
		</exec>
		<exec dir="${openmeap.slic.absPath}" executable="${blackberry.rapc}">
			<arg value="-convertpng"/> 
			<arg value="-quiet"/>
			<arg value="codename=deliverables\Standard\5.0.0\${openmeap.slic.blackberry.projectName}"/> 
			<arg value="-sourceroot=${openmeap.home}\clients\java\openmeap-slic-blackberry-test\src;${openmeap.home}\clients\java\openmeap-slic-blackberry-test\res"/> 
			<arg value="-import=${blackberry.sdk.home}\components\lib\net_rim_api.jar;${openmeap.home}\clients\java\openmeap-slic-blackberry\deliverables\Standard\5.0.0\OpenMEAPSLICBlackberryOutputFileName.jar"/> 
			<arg value="deliverables\Standard\5.0.0\${openmeap.slic.blackberry.projectName}.rapc"/>
			<arg value="C:\OpenMEAP\clients\java\openmeap-slic-blackberry-test\bin"/>
		</exec>
	</target>
	<target name="build-release" depends="-setup-client-properties" description="Build an OpenMEAP blackberry SLIC project for release.">
		<ant dir="${openmeap.slic.absPath}" antfile="${openmeap.project.build}/ant_scripts/client_blackberry.xml" target="copy-slic-assets"/>
	</target>
	
	<target name="package-debug" depends="build-debug" description="Build and package an OpenMEAP Blackberry SLIC project for debug."/>
	<target name="package-release" depends="build-release" description="Build and package an OpenMEAP Blackberry SLIC project for release.">
		
		<available file="${openmeap.slic.blackberry.path}/bin/${openmeap.slic.projectName}-release-unsigned.apk" 
				property="openmeap.slic.blackberry.apk.exists"/>
		
		<fail unless="openmeap.slic.blackberry.apk.exists" 
				message="The application must be build before it can be signed."/>
		<fail unless="openmeap.slic.blackberry.keyStore" 
				message="openmeap.slic.blackberry.keyStore is a required property for packaging.  It must be the path to the keystore to use."/>
		<fail unless="openmeap.slic.blackberry.keyStorePassword" 
				message="openmeap.slic.blackberry.keyStorePassword is a required property for packaging.  It must be the password of used to access the keystore."/>
		<fail unless="openmeap.slic.blackberry.keyAlias" 
				message="openmeap.slic.blackberry.keyAlias is a required property for packaging.  It must be the alias within the keystore to sign with."/>
		<fail unless="openmeap.slic.blackberry.keyPassword" 
				message="openmeap.slic.blackberry.keyPassword is a required property for packaging.  It must be the password for the alias within the keystore."/>
		
		<copy file="${openmeap.slic.blackberry.artifact.release.unsigned.unaligned}" 
				tofile="${openmeap.slic.blackberry.artifact.release.signed.unaligned}"/>
		
		<condition property="jarsigner" 
				value="${blackberry.sdk.home}tools/jarsigner.exe"
				else="${blackberry.sdk.home}tools/jarsigner">
			<os family="windows"/>
		</condition>
		<exec dir="${openmeap.slic.absPath}" executable="${jarsigner}">
			<arg value="-verbose"/>
			<arg value="-keystore"/><arg value="${openmeap.slic.blackberry.keyStore}"/>
			<arg value="-storepass"/><arg value="${openmeap.slic.blackberry.keyStorePassword}"/>
			<arg value="-keypass"/><arg value="${openmeap.slic.blackberry.keyPassword}"/>
			<arg value="${openmeap.slic.blackberry.artifact.release.signed.unaligned}"/>
			<arg value="${openmeap.slic.blackberry.keyAlias}"/>
		</exec>
		
		<condition property="zipalign" 
				value="${blackberry.sdk.home}tools/zipalign.exe"
				else="${blackberry.sdk.home}tools/zipalign">
			<os family="windows"/>
		</condition>
		<exec dir="${openmeap.slic.absPath}" executable="${zipalign}">
			<arg value="-v"/>
			<arg value="4"/>
			<arg value="${openmeap.slic.blackberry.artifact.release.signed.unaligned}"/>
			<arg value="${openmeap.slic.blackberry.artifact.release.signed.aligned}"/>
		</exec>
		
	</target>
	
	<target name="create-project" depends="-setup-client-properties" description="Creates an OpenMEAP blackberry SLIC from the specified properties.">
		
		<mkdir dir="${openmeap.slic.blackberry.path}"/>
		
		<!-- additional copy -->
		<mkdir dir="${openmeap.slic.blackberry.path}/src/assets/${openmeap.slic.packagedAppRoot}"/>
		
		<copy file="${openmeap.slic.icon}" 
						tofile="${openmeap.slic.blackberry.path}/res/img/icon.png"/>
		
		<copy file="${openmeap.project.build}/template/blackberry/slic-config.properties" 
						tofile="${openmeap.slic.blackberry.path}/src/slic-config.properties" overwrite="true"/>
		
		<copy file="${openmeap.project.build}/template/blackberry/BlackBerry_App_Descriptor.xml" 
						tofile="${openmeap.slic.blackberry.path}/BlackBerry_App_Descriptor.xml" overwrite="true"/>
		
		<ant antfile="${openmeap.project.build}/ant_scripts/client_blackberry.xml" target="copy-slic-assets"/>
		
		<!-- broader scope of replacements -->
		<replace dir="${openmeap.slic.blackberry.path}" includes="**/*">
			<replacefilter token="@@OPENMEAP_HOME@@" value="${openmeap.home.relative}"/>
			<replacefilter token="@@PROJECT_NAME@@" value="${openmeap.slic.blackberry.projectName}"/>
			
			<replacefilter token="@@openmeap.slic.package@@" value="${openmeap.slic.package}"/>
			<replacefilter token="@@openmeap.slic.providerAuthority@@" value="${openmeap.slic.providerAuthority}"/>
			<replacefilter token="@@openmeap.slic.pullUpdates@@" value="${openmeap.slic.pullUpdates}"/>
			<replacefilter token="@@openmeap.slic.updateFrequency@@" value="${openmeap.slic.updateFrequency}"/>
			<replacefilter token="@@openmeap.slic.appTitle@@" value="${openmeap.slic.appTitle}"/>
			<replacefilter token="@@openmeap.slic.packagedAppRoot@@" value="${openmeap.slic.packagedAppRoot}"/>
			<replacefilter token="@@openmeap.slic.developmentMode@@" value="${openmeap.slic.developmentMode}"/>
			<replacefilter token="@@openmeap.slic.deviceType@@" value="${openmeap.slic.deviceType}"/>
			<replacefilter token="@@openmeap.slic.appMgmtServiceUrl@@" value="${openmeap.slic.appMgmtServiceUrl}"/>
			<replacefilter token="@@openmeap.slic.appName@@" value="${openmeap.slic.appName}"/>
			<replacefilter token="@@openmeap.slic.appVersion@@" value="${openmeap.slic.appVersion}"/>
			<replacefilter token="@@openmeap.slic.version@@" value="${openmeap.revision}"/>
			<replacefilter token="@@openmeap.slic.updatePendingTimeout@@" value="${openmeap.slic.updatePendingTimeout}"/>
			<replacefilter token="@@openmeap.slic.blackberry.localStorageRoot@@" value="${openmeap.slic.blackberry.localStorageRoot}"/>
			<replacefilter token="@@openmeap.slic.vendor@@" value="${openmeap.slic.vendor}"/>
			<replacefilter token="@@openmeap.slic.blackberry.localStorageRoot@@" value="${openmeap.slic.blackberry.localStorageRoot}"/>
		</replace>
		
	</target>
	
</project>